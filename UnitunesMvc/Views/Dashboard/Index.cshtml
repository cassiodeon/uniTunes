@model IEnumerable<UnitunesMvc.Core.Database.Entities.Venda>

@{
    ViewBag.Title = "Dashboard";
}

<h2>
    <span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Dashboard
</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.PrimeiroNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.PrimeiroNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
}

</table>

<dt>
    Total Vendido
</dt>

<dd>
    @Model.Sum(i => i.Total )
</dd>